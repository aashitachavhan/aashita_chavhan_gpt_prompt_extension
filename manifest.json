{
  "manifest_version": 3,
  "name": "GPT Prompt Enhancer",
  "version": "1.0",
  "description": "Enhance prompts with role-based Gemini integration.",
  "permissions": ["scripting", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GPT Prompt Enhancer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-48.png",
    "32": "icons/icon-48.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-48.png"
  }
}
